@model CarPlanet.Models.User

@{
    ViewData["Title"] = "LoginRegister";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/forms.css" />
</head>

<login>
<form id="login" asp-controller="user" asp-action="loginregister" method="post">
    <h3>Login</h3>
    <div class="form-group">
        <label asp-for="Email">Email Adresse</label>
        <input type="email" class="form-control" asp-for="Email" placeholder="Email eingeben"></label>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Passwort">Passwort</label>
        <input type="password" asp-for="Passwort" class="form-control" placeholder="Passwort eingeben">
        <span asp-validation-for="Passwort"></span>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" id="exampleCheck1">
        <label class="form-check-label">Eingeloggt bleiben</label>
    </div>
    <br>
    <button type="submit" class="btn btn-primary">Einloggen</button>
</form>
 </login>
<divider></divider>
<register>
    <form id="register">
        <h3>Registrieren</h3>
        <div class="form-group">
            <label asp-for="Email">Email Adresse</label>
            <input type="email" class="form-control" asp-for="Email" placeholder="Email eingeben"></label>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Passwort">Passwort</label>
            <input type="password" asp-for="Passwort" class="form-control" placeholder="Passwort eingeben">
            <span asp-validation-for="Passwort"></span>
        </div>
        <div class="form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label">Ich habe die <a href="/ABG.pdf")" target="_blank">AGB</a> gelesen und bin damit Einverstanden</label>
        </div>
        <br>
        <button type="submit" class="btn btn-primary">Registrieren</button>
    </form>
</register>


