@model CarPlanet.Models.User

@{
    ViewData["Title"] = "Register";
}

<body>
    <div class="flex-container">
    <register>
        <form asp-controller="user" asp-action="Register" method="post">
            <h3>Registrieren</h3>
            <div class="form-group">
                <label asp-for="Email">Email Adresse</label>
                <input type="email" class="form-control" asp-for="Email" placeholder="Email eingeben"></label>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Passwort">Passwort</label>
                <input type="password" asp-for="Passwort" class="form-control" placeholder="Passwort eingeben">
                <span asp-validation-for="Passwort"></span>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate"></label>
                <input type="date" asp-for="Birthdate" class="form-control">
                <span asp-validation-for="Birthdate"></span>
            </div>

            <div class="form-group">
                <label asp-for="Gender">Geschlecht</label>
                <select asp-for="Gender">
                    <option value="0">männlich</option>
                    <option value="1">weiblich</option>
                    <option selected value="2">divers</option>
                </select>
                <span asp-validation-for="Gender"></span>
            </div>

            <div class="form-check">
                <input type="checkbox" asp-for="AGB" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label">Ich habe die <a href="/ABG.pdf" )" target="_blank">AGB</a> gelesen und bin damit Einverstanden</label>
                <span asp-validation-for="AGB"></span>
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Registrieren</button>
        </form>
    </register>

    <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img height="580" width="464" src="https://i.pinimg.com/originals/a0/8a/29/a08a29cc6253f91cdcd5dcbe7189a6b6.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img height="580" width="464" src="https://www.reuters.com/resizer/T6rG97r7TZ_aXfoj8GZdf8to6bM=/1920x2400/smart/filters:quality(80)/cloudfront-us-east-2.images.arcpublishing.com/reuters/T7VRYMJJAVONFEIYOW43M67HJ4.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img height="580" width="464"  src="https://s.abcnews.com/images/Business/porsche-taycan-turbo-s-01-ht-iwb-210615_1623782736213_hpMain_4x5_992.jpg" alt="Third slide">
            </div>
        </div>
    </div>
    </div>


</body>
